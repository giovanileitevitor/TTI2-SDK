<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tti_toolbar_height"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/tti_toolbar_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="center"
        android:paddingHorizontal="20dp"
        android:src="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toStartOf="@+id/tti_toolbar_right_icon"
        android:layout_toEndOf="@+id/tti_toolbar_left_icon"
        android:fontFamily="@font/telkomsel_batik_sans_bold"
        android:gravity="left"
        android:text="@string/toolbar_title_tti"
        android:textColor="@color/blue_dark" />

    <ImageView
        android:id="@+id/tti_toolbar_right_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/icon_help" />

</RelativeLayout>