<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_white">

    <View
        android:id="@+id/missions_two_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_line_mustard_light"
        app:layout_constraintBottom_toBottomOf="@+id/missions_two_mark_space"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/missions_two_container_mark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="@+id/missions_two_text_mark"
        app:layout_constraintEnd_toEndOf="@+id/missions_two_text_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/missions_two_view_mark_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:background="@drawable/mark_one" />
        <View
            android:id="@+id/missions_two_view_mark_two"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/mark_two" />
    </LinearLayout>

    <TextView
        android:id="@+id/missions_two_text_mark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingBottom="0dp"
        android:paddingEnd="40dp"
        android:textAlignment="center"
        android:textColor="@color/all_white"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Event"/>

    <TextView
        android:id="@+id/missions_two_title_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintEnd_toStartOf="@+id/missions_two_icon_pros_text"
        app:layout_constraintStart_toEndOf="@+id/missions_two_icon_pre_text"
        app:layout_constraintTop_toBottomOf="@+id/missions_two_container_mark"
        tools:text="12 Days of Christmas" />

    <ImageView
        android:id="@+id/missions_two_icon_pre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_domestic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/missions_two_background"
        app:layout_constraintTop_toBottomOf="@+id/missions_two_text_mark" />

    <ImageView
        android:id="@+id/missions_two_icon_pros_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/icon_chevron_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/missions_two_sub_title_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintEnd_toStartOf="@+id/missions_two_icon_pros_text"
        app:layout_constraintStart_toStartOf="@+id/missions_two_title_box"
        app:layout_constraintTop_toBottomOf="@+id/missions_two_title_box"
        tools:text="12 Days of Christmas 12 Days of Christmas 12 Days of Christmas 12 Days of Christmas 12 Days of Christmas 12 Days of Christmas" />

    <View
        android:id="@+id/missions_two_mark_space"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missions_two_sub_title_box" />

</androidx.constraintlayout.widget.ConstraintLayout>