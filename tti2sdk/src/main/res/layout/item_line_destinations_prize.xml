<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerPrize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/all_white" >

    <View
        android:id="@+id/prize_one_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_line_soft_gray"
        app:layout_constraintBottom_toBottomOf="@+id/prize_one_mark_space"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/prize_one_container_mark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prize_one_title_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/prize_one_icon_pre_text"
        app:layout_constraintTop_toBottomOf="@+id/prize_one_container_mark"
        tools:text="Zalora Voucher" />

    <ImageView
        android:id="@+id/prize_one_icon_pre_text"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/prize_one_background"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prize_one_sub_title_box"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="2"
        android:textAlignment="viewStart"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/prize_one_title_box"
        app:layout_constraintTop_toBottomOf="@+id/prize_one_title_box"
        tools:text="Valid until 30 DEC 2023" />

    <View
        android:id="@+id/prize_one_mark_space"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prize_one_sub_title_box" />

</androidx.constraintlayout.widget.ConstraintLayout>