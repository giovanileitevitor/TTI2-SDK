<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="280dp"
    android:background="@color/blue_dark"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBackCompleted"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_background_completed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgIconCompleted"
        android:layout_marginTop="80dp"
        android:layout_marginStart="72dp"
        android:src="@drawable/img_like_completed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelGreatJob"
        tools:text="Great job !"
        android:textSize="56sp"
        android:fontFamily="@font/telkomsel_batik_sans_regular"
        android:textColor="@color/all_white"
        app:layout_constraintTop_toBottomOf="@id/imgBackCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelSubtitleOne"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        tools:text="You have fully watched the video."
        android:text="You have fully watched the video."
        android:textColor="@color/all_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelGreatJob"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelSubtitleTwo"
        android:text="You won 5km for your journey."
        tools:text="You won 5km for your journey."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/all_white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/labelSubtitleOne"/>
    


</androidx.constraintlayout.widget.ConstraintLayout>