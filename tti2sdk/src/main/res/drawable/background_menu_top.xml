<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>

            <stroke
                android:width="2dp"
                android:color="#7000" />

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp" />

            <padding
                android:bottom="2dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="-2dp" />

        </shape>
    </item>

    <item>
        <shape>

            <solid android:color="@color/all_white"/>

            <stroke android:width="0dp" android:color="@color/all_white"/>

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp" />

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />

        </shape>
    </item>

</layer-list>
